html,body
    margin 0 auto
    padding 0
    box-sizing border-box
#container
    position relative
    top 0
.screen
    width 100%
    height 608px
    background-color #111;
    overflow hidden
    .play-window
        width 714px
        height 608px
        font-size 14px
        font-family NSimsun
        margin 0 auto
        padding 0px
        background-color #fff
        transform scale(1.33,1)
        -webkit-user-select none
        user-select none;
        cursor default
.screen:hover + .buttonpanel,.buttonpanel:hover
    opacity 1
.buttonpanel
    transition .8s
    position absolute
    opacity 0
    height 80px
    margin-top -80px
    img
        width 60px
        height 60px
#controlDiv
    position relative
    top 0px
    background-color rgba(211, 211, 211, 0.31)
    width 100%
    height 60px
    padding-top 20px
    text-align center
    h3,p
        margin 0
#controlDivTitle
  //font-size xx-large
#change_them
    background-color #9cceff
    width 100px
    height 30px
    margin 10px
    border cornflowerblue 1px solid
    border-radius 10px
.cln
    background-color #ddd
    height 200px
    .progress-text
        font-size 14px
        line-height 0
#progress
    position relative
    display inline-block
    width 100%
    height 20px
    background-color #eee
#downloadProgress
    position absolute
    width 0
    height 100%
    background-color #aaa
#playProgress
    position absolute
    width 0
    height 100%
    background-color #4ef1d3
.icon
    box-shadow 2px 2px 10px rgba(0, 0, 0, 0.51)
    border-radius 20px
    width 90px
